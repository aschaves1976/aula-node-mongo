<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    
    <table>
      <tr style="background-color:aquamarine">
          <td>Nome</td>
          <td>Idade</td>
          <td>Cidade</td>
          <td>Excluir</td>
      </tr>
        <% clientes.forEach(function(item){
          %>
          <tr style="background-color:gainsboro">
              <td> <a href ="/edit/<%= item._id %>" >
                  <%= item.nome %>
                </a> </td>
              <td><%= item.idade %></td>
              <td><%= item.cidade %></td>
              <td> <a href ="/delete/<%= item._id %>"
                onclick="return confirm('Tem certeza que deseja excluir?')"> Excluir
              </a> </td>
          </tr>
          <%
        })  %>

      </table>
      
    <p>
      <% for(let i= 1; i <= qtdPages; i++){
        if( i !== page){
      %>
        <a href="/<%= i %>"> <%= i %> | </a>
        <%}else{%>
        <%= i %> |
      <% } } %>
    </p>

    <hr />

    <p><%= counter %> Clientes encontrados!</p>

    <p></p>
    <a href="/new">Cadastrar Novo Cliente</a>
  </body>
</html>
